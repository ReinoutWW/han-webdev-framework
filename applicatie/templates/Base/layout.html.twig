{% extends 'Base/base.html.twig' %}

{% block body %}
    <header>
        <h1>Here's the header</h1>
    </header>
    <nav>
        <a href="/">nav 1</a>
        <a href="/">nav 2</a>
        <a href="/">nav 3</a>
        <a href="/">nav 4</a>
    </nav>
    <main>
        {# Flash messages #}
        {% if session().hasFlash('success') %}
            <div class="container-invisible">
                <div class='rw-notification-success' role="alert">
                    <ul>
                        {% for message in session().getFlash('success') %}
                            <li>{{ message }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        {% endif %}
        <div class="container">
         {% block main %}
             {# Main content will be rendered here #}
         {% endblock %}
        </div>
    </main>
    <footer>
        This is the footer
    </footer>
{% endblock %}