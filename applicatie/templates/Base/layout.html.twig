{% extends 'Base/base.html.twig' %}

{% block body %}
    <header>
        <h1>GelreAirport</h1>
        <div>
            {% if session().isAuthenticated() %}
                <a href='/logout'>Log out</a>
            {% else %}
                <a href='/login'>Log in</a>
            {% endif %}
        </div>
    </header>
    <nav>
        {# Based on roles, show the navigation items #}
        <a class="nav-item {{ (pathInfo == '/vluchten') ? 'active' : '' }}" href="/vluchten">Vluchten</a>
        <a class="nav-item {{ (pathInfo == '/boekingen/vluchten') ? 'active' : '' }}" href="/boekingen/vluchten">Mijn vluchten</a>
    </nav>
    <main>
        {# Flash messages #}
        {% if session().hasNotification() %}
        <div class="container-invisible">
            {% for notificationType in session().getNotificationTypes %}
                {% if session().hasFlash(notificationType) %}
                    <div class='rw-notification-{{notificationType}}' role="alert">
                        <ul>
                            {% for message in session().getFlash(notificationType) %}
                                <li>{{ message }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
        {% endif %}
        {% block main %}
            {# Main content will be rendered here #}
        {% endblock %}
    </main>
    <footer>
        This is the footer
    </footer>
{% endblock %}