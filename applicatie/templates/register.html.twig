{% extends 'Base/empty.html.twig' %}

{% block main %}
<div class="container contrainer-size-small">
    <h1>Registreren</h1>

    <form class="rw-form form-w-100" method="post" action="/register">
        <div>
            <label for="name" >Gebruikersnaam</label>
            <input name="name" pattern="^[a-zA-Z0-9]{3,20}$" title="Gebruikersnaam moet tussen 3 en 15 tekens lang zijn en mag alleen letters en cijfers bevatten." type="text" class="form-control" id="name" required>
        </div>
        <div>
            <label for="gender" >Geslacht</label>
            <select name="gender" class="form-control" pattern="[A-Za-z0-9]+" required>
                <option value="M">Man (M)</option>
                <option value="V">Vrouw (V)</option>
                <option value="V">Boeing AH-64 Apache attack helicopter (A)</option>
            </select>
        </div>
        <div>
            <label for="password" >Wachtwoord</label>
            <input name="password" type="password" class="form-control" id="password" required>
        </div>
        <div>
            <label for="repeatPassword" >Herhaal wachtwoord</label>
            <input name="repeatPassword" type="password" class="form-control" id="repeatPassword" required>
        </div>
        <button type="submit" class="btn btn-primary w-100">Registreren</button>
    </form>
</div>
{% endblock %}