{% extends 'Base/empty.html.twig' %}

{% block main %}
<div class="container contrainer-size-small">
    <h1>Registreren</h1>

    <form class="rw-form" method="post" action="/register">
        <div>
            <label for="name" >Gebruikersnaam</label>
            <input name="name" type="text" class="form-control" id="name">
        </div>
        <div>
            <label for="gender" >Geslacht</label>
            <input name="gender" pattern=" *[a-zA-Z][A-Za-z' .,-]{0,29} *" type="text" class="form-control" id="gender">
        </div>
        <div>
            <label for="password" >Wachtwoord</label>
            <input name="password" type="password" class="form-control" id="password">
        </div>
        <div>
            <label for="repeatPassword" >Herhaal wachtwoord</label>
            <input name="repeatPassword" type="password" class="form-control" id="repeatPassword">
        </div>
        <button type="submit" class="btn btn-primary">Registreren</button>
    </form>
</div>
{% endblock %}